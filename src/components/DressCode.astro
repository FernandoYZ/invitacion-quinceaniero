---
import Iconoss from "./Iconos";
---

<div class="flex items-center justify-center">
  <div
    class="bg-white border-2 border-[#9868b5] rounded-2xl p-6 sm:p-20 text-[#9868b5]"
  >
    <div class="text-center mb-6 sm:mb-10 text-2xl sm:text-5xl">
      <h1><span class="font-bold">DRESS</span> CODE</h1>
      <p class="text-lg">ELEGANTE</p>
    </div>
    <div class="flex flex-row space-x-6">
      <div class="flex flex-row items-center space-x-1">
        <span class="font-script text-2xl">Chicos:</span>
        <Iconoss name="GiTie" size={32} color="#9868b5" />
      </div>
      <div class="flex flex-row items-center space-x-1">
        <span class="text-2xl font-script">Chicas:</span>
        <Iconoss name="GiHighHeel" size={32} color="#9868b5" />
      </div>
      <div class="flex flex-row items-center space-x-1">
        <span class="text-2xl font-script">Todos:</span>
        <Iconoss name="FaGift" size={32} color="#9868b5" />
      </div>
    </div>
  </div>
</div>
