---
import data from '@data';
import taco from '@assets/img/taco.svg';
import { Image } from 'astro:assets';
---

<section 
    class="py-12 px-4 md:py-16 text-center"
    aria-labelledby="reception-section"
>
    <div class="max-w-4xl mx-auto space-y-10 md:space-y-12">
        <!-- Icono decorativo -->
        <div class="mb-10 md:mb-12">
        <Image
            src={taco}
            alt=""
            class="w-20 md:w-24 mx-auto"
            width="96"
            height="96"
            loading="eager"
            fetchpriority="high"
            aria-hidden="true"
        />
        </div>

        <!-- Encabezado -->
        <header class="space-y-6">
        <h2 
            id="reception-section"
            class="text-4xl md:text-5xl lg:text-6xl text-primary font-script font-black leading-tight"
        >
            Recepción
        </h2>
        </header>

        <!-- Contenido principal -->
        <div class="space-y-10 md:space-y-12 max-w-2xl mx-auto uppercase">
        <section class="space-y-4 md:space-y-5" aria-labelledby="reception-location">
            <h3 
            class="text-xl md:text-2xl tracking-wider font-black text-primary-600"
            id="reception-location"
            >
            Salón de Recepción
            </h3>
            <p class="text-sm font-semibold md:text-xl text-gray-700 tracking-wide">
            {data.direccion}
            </p>
            <div 
                class="inline-block rounded-3xl px-6 py-3 bg-primary-600 text-white text-lg md:text-xl hover:bg-primary-700 transition-colors cursor-pointer"
                role="button"
                tabindex="0"
                aria-label="Ver ubicación en el mapa"
            >
            Ubicación
            </div>
        </section>
        </div>
    </div>
</section>